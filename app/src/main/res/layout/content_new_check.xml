<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.cbpaperwork.NewCheck"
    tools:showIn="@layout/activity_new_check">

    <TextView
        android:id="@+id/check_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Number:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:padding="5dp" />

    <EditText
        android:id="@+id/enterCheckNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/check_number"
        android:layout_toEndOf="@id/check_number"
        android:selectAllOnFocus="true"
        android:ems="10"
        android:inputType="number"
        android:padding="5dp" />

    <TextView
        android:id="@+id/check_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Name:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/check_number"
        android:textSize="20sp"
        android:padding="5dp" />

    <EditText
        android:id="@+id/enterCheckName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/check_name"
        android:layout_toEndOf="@id/check_name"
        android:selectAllOnFocus="true"
        android:ems="10"
        android:inputType="textCapWords"
        android:padding="5dp" />

    <TextView
        android:id="@+id/check_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Amount:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/check_name"
        android:textSize="20sp"
        android:padding="5dp" />

    <EditText
        android:id="@+id/enterCheckAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/check_value"
        android:layout_toEndOf="@id/check_value"
        android:selectAllOnFocus="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="5dp" />
</RelativeLayout>
